<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#42CCDD"
    android:orientation="vertical"
    tools:context=".HistorialDieta">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tu historial de dieta"
        android:textAlignment="center"
        android:textSize="80dp" />

    <Button
        android:id="@+id/btnmostrarhistorialdie"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_r"
        android:text="Ver datos" />

    <ListView
        android:id="@+id/listviewdieta"
        android:layout_width="330dp"
        android:layout_height="327dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_border" />
</LinearLayout>