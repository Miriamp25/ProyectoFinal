<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#42CCDD"
    tools:context=".PanBrazo">

    <TextView
        android:id="@+id/tvbrazos"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textAlignment="center"
        android:text="Brazos"
        android:layout_marginTop="20dp"
        android:textSize="70dp"
         />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imagen1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/buno" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Elevaciones laterales"
                android:textAlignment="center"
                android:textSize="20sp"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/imagen2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                app:srcCompat="@drawable/bdos" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apertura con mancuernas y puente en fitball"
                android:textAlignment="center"
                android:textSize="20sp"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/imagen3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                app:srcCompat="@drawable/btres" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_marginTop="10dp"
                android:text="Press de hombro"
                android:textAlignment="center"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imagen4"
                android:layout_width="350dp"
                android:layout_height="249dp"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                app:srcCompat="@drawable/bcuatro" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Extensión de tríceps"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textSize="20sp"
                />

            <ImageView
                android:id="@+id/imagen5"
                android:layout_width="350dp"
                android:layout_height="241dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                app:srcCompat="@drawable/bcinco" />

            <TextView
                android:id="@+id/tv5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Remo"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                />

            <ImageView
                android:id="@+id/imagen6"
                android:layout_width="350dp"
                android:layout_height="282dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                app:srcCompat="@drawable/bseis" />

            <TextView
                android:id="@+id/tv6"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Flexiones de tríceps"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                />


        </LinearLayout>
    </ScrollView>
</LinearLayout>